<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianwen.springcloud.microservice.bussinessassist.dao.ResourceStarMapper">
    <!-- 分页 -->
    <sql id="sqlFragment_pagination">
        <if test="numPerPage != null">
            limit #{numPerPage}
        </if>
        <if test="start != null">
            offset #{start}
        </if>
    </sql>

    <!-- 查询条件 -->
    <sql id="sqlFragment_searchCriteria">
        <if test="oredCriteria != null and oredCriteria.size != 0">
            <trim prefix="and(" suffix=")">
                <foreach collection="oredCriteria" item="criteria" separator="or">
                    <if test="criteria.valid">
                        <trim prefix="(" prefixOverrides="and" suffix=")">
                            <foreach collection="criteria.criteria" item="criterion">
                                <choose>
                                    <when test="criterion.noValue">
                                        and ${criterion.condition}
                                    </when>
                                    <when test="criterion.singleValue">
                                        and ${criterion.condition} #{criterion.value}
                                    </when>
                                    <when test="criterion.betweenValue">
                                        and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                                    </when>
                                    <when test="criterion.listValue">
                                        and ${criterion.condition}
                                        <foreach close=")" collection="criterion.value" item="listItem" open="("
                                                 separator=",">
                                            #{listItem}
                                        </foreach>
                                    </when>
                                </choose>
                            </foreach>
                        </trim>
                    </if>
                </foreach>
            </trim>
        </if>
    </sql>

    <select id="getCountByUserAndResource" parameterType="java.util.Map"
            resultType="integer">
        select count(*) from t_e_resource_star where objectid = #{contentid} and staruser = #{userid}
    </select>

    <insert id="addResourceStar" parameterType="java.util.Map">
        insert into t_e_resource_star(starid, objectid, objecttype, result, staruser, startime)
        values((SELECT pg_nextval('seq_starid_t_e_resource_star')), #{contentid}, '1', #{rating}, #{userid}, CURRENT_TIMESTAMP)
    </insert>

    <select id="queryStarForList" parameterType="java.util.Map"
            resultType="com.tianwen.springcloud.microservice.bussinessassist.entity.ResourceStar">
        select t0.* from t_e_resource_star t0
        where 1 = 1
        <if test="userid != null">
            <if test="!userid.isEmpty()">
                and staruser = #{userid}
            </if>
        </if>
        <if test="contentid != null">
            <if test="!contentid.isEmpty()">
                and objectid = #{contentid}
            </if>
        </if>
        <if test="begin_time != null">
            and startime >= #{begin_time}
        </if>
        <if test="end_time != null">
            and #{end_time} >= startime
        </if>
    </select>

    <select id="countStar" parameterType="java.util.Map" resultType="Integer">
        select count(*) from
        (select t0.* from t_e_resource_star t0
        where 1 = 1
        <if test="userid != null">
            <if test="!userid.isEmpty()">
                and staruser = #{userid}
            </if>
        </if>
        <if test="contentid != null">
            <if test="!contentid.isEmpty()">
                and objectid = #{contentid}
            </if>
        </if>
        <if test="begin_time != null">
            and startime >= #{begin_time}
        </if>
        <if test="end_time != null">
            and #{end_time} >= startime
        </if>
        ) tbl
    </select>
</mapper>
